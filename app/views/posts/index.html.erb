<div class="container">
  <h1>the posts</h1>
  <%= link_to 'New Post', new_posts_path %>
</div>

<div class="container">
  <% @posts.each do |p|%>
    <article id=<%= "article_#{p.id}" %>>
      <h2><%= p.title %></h2>
      <p><%= p.body %></p>
      <p><%= p.tags %></p>
    </article>
  <% end %>
</div>
