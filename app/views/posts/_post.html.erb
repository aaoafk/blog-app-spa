<%= turbo_frame_tag dom_id( post ) do %>
  <article> 
    <h2><%= link_to "#{post.title.titleize}", post_path(post) %></h2>
    <p><%= post.body %></p>
    <p><%= post.tags %></p>

    <!-- TODO: Figure out turbo targeting here -->
    <div class="container">
      <%= link_to 'Edit Post', edit_post_path( post ) %>
      <%= link_to 'Destroy Post', method: :delete %>
    </div>
  </article>
<% end %>
